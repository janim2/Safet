<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Contact_school">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/curved_corners">

            <TextView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="School"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:padding="8dp"
                        app:srcCompat="@drawable/school"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="School name"
                            android:textSize="14dp"
                            android:id="@+id/the_school_name"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="3"
                        android:padding="8dp"
                        app:srcCompat="@drawable/phone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textColor="@color/main_blue"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="024 888 8888"
                            android:id="@+id/the_school_number"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="3"
                        android:padding="8dp"
                        app:srcCompat="@drawable/email"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mail"
                            android:textColor="@color/main_blue"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email@gmail.com"
                            android:id="@+id/the_school_email"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="3"
                        android:padding="8dp"
                        app:srcCompat="@drawable/location"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="@color/main_blue"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kejetia, Kumasi"
                            android:id="@+id/the_school_location"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="13sp"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/main_blue"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/main_blue"
                    android:layout_marginTop="-10dp"
                    android:background="@android:color/white"
                    android:text="Write us directly"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border_only_curved_corners"
                    android:hint="Subject"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:id="@+id/subject"
                    android:textColor="@color/main_blue"
                    android:textColorHint="@color/colorPrimary"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/border_only_curved_corners"
                    android:hint="Type your message here"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:inputType="textMultiLine"
                    android:textColor="@color/main_blue"
                    android:id="@+id/message"
                    android:textColorHint="@color/colorPrimary"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="right"
                    android:text="Submit"
                    android:textSize="14sp"
                    android:id="@+id/submit_button"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_corners"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>