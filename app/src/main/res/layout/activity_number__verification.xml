<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Number_Verification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your mobile number"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:id="@+id/enter_number_text"
                android:textColor="@color/main_blue"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_weight="2.5"
                    android:src="@drawable/ghana"
                    android:padding="10dp"
                    android:id="@+id/country_code_picker"
                    android:background="@android:drawable/editbox_background">
                </ImageView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:maxLength="13"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="(206) 000-000"
                    android:id="@+id/user_phone_number"
                    android:background="@android:drawable/editbox_background"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/loading"
                android:visibility="gone"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:id="@+id/status_message"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="10dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_layout"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create account password"
                    android:textSize="12sp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/main_blue"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:maxLength="13"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/lock"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="Password"
                    android:id="@+id/password_editText"
                    android:background="@android:drawable/editbox_background"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:maxLength="13"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="40dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="Confirm Password"
                    android:id="@+id/confirm_password_editText"
                    android:background="@android:drawable/editbox_background"/>


            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/password_loading"
                android:visibility="gone"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/password_success_message"
                android:layout_marginTop="20dp"/>


        </LinearLayout>


    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="VErIFY NUMBER"
        android:textSize="13sp"
        android:id="@+id/next_button"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"/>
</FrameLayout>