<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="85dp"
            android:orientation="vertical"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/curved_corners">

            <TextView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:text="Remainder"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="vertical"
            android:id="@+id/create_or_change_layout"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:id="@+id/create_or_chagne_textView"
                android:textColor="@color/main_blue"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="vertical"
            android:id="@+id/delete_notifications_layotu"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="Delete Notifications"
                android:gravity="center_vertical"
                android:textColor="@color/main_blue"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/reminder_layout"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pick up Remainder"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/main_blue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Currently 1.0km before drop spot"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drop Remainder"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/main_blue"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Currently 1.0km before drop spot"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/main_blue"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set notification alert"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select all"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/pickup_notify_text"
                android:checked="true"
                android:text="@string/pickup_notification"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/drop_notify_text"
                android:text="@string/drop_notification"/>

             <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                 android:checked="true"
                 android:layout_marginTop="10dp"
                 android:textColor="@color/colorPrimaryDark"
                 android:id="@+id/reached_notify_text"
                 android:text="@string/reached_school_notification"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/left_notify_text"
                android:text="@string/left_school_notification"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>